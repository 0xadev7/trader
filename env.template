# ============================================
# Gate.io API Credentials
# ============================================
# Get your API keys from: https://www.gate.io/en/apiv4
# IMPORTANT: Use read-only keys for backtesting/dry-run
# Only use trading-enabled keys when running live trading
GATE_API_KEY=your_api_key_here
GATE_API_SECRET=your_api_secret_here

# ============================================
# Trading Configuration
# ============================================
# Base currency for trading (usually USDT)
BASE_CURRENCY=USDT

# Trading pairs to monitor and trade
# Format: PAIR1,PAIR2,PAIR3 (use underscore, not slash)
# Examples: BTC_USDT,ETH_USDT,BNB_USDT
TRADING_PAIRS=BTC_USDT,ETH_USDT

# Initial capital in base currency (for live trading)
INITIAL_CAPITAL=1000

# Risk management parameters
RISK_PER_TRADE=0.02                    # Risk 2% of capital per trade
MAX_POSITION_SIZE=0.1                  # Maximum 10% of capital per position
STOP_LOSS_PCT=0.02                     # 2% stop loss
TAKE_PROFIT_PCT=0.04                   # 4% take profit
MAX_DRAWDOWN_PCT=0.15                  # 15% maximum drawdown before halting

# ============================================
# Model Configuration
# ============================================
# Paths for models, data, and logs
MODEL_PATH=./models
DATA_PATH=./data
LOG_PATH=./logs

# ============================================
# Trading Parameters
# ============================================
# Primary timeframe for analysis
# Options: 1m, 5m, 15m, 1h, 4h, 1d
PRIMARY_TIMEFRAME=15m

# Lookback window for sequence models (number of candles)
LOOKBACK_WINDOW=100

# Prediction horizon (number of candles ahead to predict)
PREDICTION_HORIZON=5

# Trading interval (how often to check for trades in minutes)
TRADING_INTERVAL_MINUTES=5

# ============================================
# AI Model Parameters
# ============================================
# LSTM Model
LSTM_UNITS=128

# Transformer Model
TRANSFORMER_D_MODEL=128
TRANSFORMER_NHEAD=8
TRANSFORMER_NLAYERS=4

# General
DROPOUT_RATE=0.2

# ============================================
# Reinforcement Learning Parameters
# ============================================
RL_GAMMA=0.99
RL_LEARNING_RATE=0.0003
RL_BATCH_SIZE=64
RL_BUFFER_SIZE=10000

# ============================================
# Backtesting Configuration
# ============================================
# Date range for backtesting (YYYY-MM-DD format)
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-01-01

# Initial balance for backtesting
BACKTEST_INITIAL_BALANCE=10000

# Commission rate (0.001 = 0.1%)
BACKTEST_COMMISSION=0.001

# ============================================
# Dry Run Configuration
# ============================================
# Duration of dry-run simulation in days
DRY_RUN_DURATION_DAYS=7

# Interval between iterations in minutes (how often to check markets)
DRY_RUN_INTERVAL_MINUTES=5

# ============================================
# Advanced Configuration
# ============================================
# Minimum confidence threshold for executing trades (0.0 to 1.0)
# Trades are only executed if model confidence exceeds this value
MIN_CONFIDENCE_THRESHOLD=0.6

# Enable/disable specific models in ensemble
# Set to 0 to disable, 1 to enable
USE_LSTM=1
USE_TRANSFORMER=1
USE_RL=0

# Model weights for ensemble (must sum to 1.0 if all models enabled)
# These weights are adjusted dynamically based on performance
ENSEMBLE_WEIGHT_LSTM=0.35
ENSEMBLE_WEIGHT_TRANSFORMER=0.35
ENSEMBLE_WEIGHT_RL=0.30

# ============================================
# Logging Configuration
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable detailed trade logging
VERBOSE_LOGGING=1

# ============================================
# Safety Settings
# ============================================
# Maximum number of concurrent positions
MAX_CONCURRENT_POSITIONS=3

# Daily trading limit (number of trades per day)
MAX_TRADES_PER_DAY=10

# Enable emergency stop (set to 1 to enable automatic stop on large loss)
EMERGENCY_STOP_ENABLED=1

# Emergency stop threshold (percentage loss to trigger stop)
EMERGENCY_STOP_THRESHOLD=0.20

